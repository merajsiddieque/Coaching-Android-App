<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"
        tools:targetApi="30" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:forceDarkAllowed="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Checking"
        tools:targetApi="31">

        <!-- Activities -->
        <activity
            android:name=".StdActivity"
            android:exported="false"
            android:label="@string/title_activity_std"
            android:theme="@style/Theme.Checking.NoActionBar" />
        <activity
            android:name=".teacherReset"
            android:exported="false" />
        <activity
            android:name=".messagesTeacher"
            android:exported="false" />
        <activity
            android:name=".teacherActivity"
            android:exported="false"
            android:label="@string/title_activity_teacher"
            android:theme="@style/Theme.Checking.NoActionBar" />
        <activity
            android:name=".home"
            android:exported="false" />
        <activity
            android:name=".delete_account"
            android:exported="false" />
        <activity
            android:name=".resetpass"
            android:exported="false" />
        <activity
            android:name=".adminActivity"
            android:exported="false"
            android:label="@string/title_activity_admin"
            android:theme="@style/Theme.Checking.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
