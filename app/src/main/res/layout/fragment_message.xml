<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/delete_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.messages.messageFragment">

    <TextView
        android:id="@+id/deleteAccountHeading"
        android:layout_width="440dp"
        android:layout_height="53dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#000000"
        android:text="@string/messages"
        android:textAlignment="center"
        android:textColor="#FDFBFB"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/deleteAccountEmailLayout"
        android:layout_width="321dp"
        android:layout_height="159dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteAccountHeading">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/messagetxtBox"
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:hint="Message" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/messageSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deleteAccountEmailLayout" />

    <CheckBox
        android:id="@+id/checkBoxTeacher"
        android:layout_width="99dp"
        android:layout_height="53dp"
        android:layout_marginBottom="4dp"
        android:text="Teacher"
        app:layout_constraintBottom_toTopOf="@+id/checkBoxStudent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <CheckBox
        android:id="@+id/checkBoxStudent"
        android:layout_width="100dp"
        android:layout_height="49dp"
        android:layout_marginBottom="340dp"
        android:text="Student"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>