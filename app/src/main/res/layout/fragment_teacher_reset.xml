<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/teacher_reset"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.TeacherReset.TeacherResetFragment">

    <TextView
        android:id="@+id/teacherResetHeading"
        android:layout_width="439dp"
        android:layout_height="58dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="#000000"
        android:text="@string/resetpass"
        android:textAlignment="center"
        android:textColor="#FDFBFB"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/teacherResetEmailLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherResetHeading">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/teacherResetEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Student Email" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/teacherResetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/resetpass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.811"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teacherResetEmailLayout" />

    <CheckBox
        android:id="@+id/teacherSelfReset"
        android:layout_width="107dp"
        android:layout_height="51dp"
        android:text="Self"
        app:layout_constraintBottom_toBottomOf="@+id/teacherResetButton"
        app:layout_constraintEnd_toStartOf="@+id/teacherResetButton"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
